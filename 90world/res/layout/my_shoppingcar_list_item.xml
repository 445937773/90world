<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5.0dip" 
   >

<RelativeLayout
    android:id="@+id/ly_picture_my_favorite_i"
    android:layout_width="100.0dip"
    android:layout_height="100.0dip"
    android:layout_marginTop="5dp"
    android:paddingLeft="5.0dip" >

    <ImageView
        android:id="@+id/iv_picture_my_shoppingcar"
        android:layout_width="100.0dip"
        android:layout_height="100.0dip"
        android:background="@drawable/background_corners"
        android:scaleType="fitCenter"
    	android:padding="5.0dip" />
</RelativeLayout>
    
<LinearLayout
    android:id="@+id/layout_product_show_my_favorite"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/ly_picture_my_favorite_i"
    android:layout_toLeftOf="@+id/ck_select_my_favorite"
    android:layout_toRightOf="@+id/ly_picture_my_favorite_i"
    android:orientation="vertical"
    android:weightSum="3" >

    <TextView
        android:id="@+id/cb_goodsselect_shoppinglist_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="5.0dip"
        android:layout_marginRight="15.0dip"
        android:layout_marginTop="2.0dip"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="商品名字"
        android:textColor="#ff000000"
        android:textSize="18sp"
         />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:layout_margin="2dp"
    android:layout_weight="1"
    android:gravity="center_vertical" >

    <TextView
        android:id="@+id/tv_text_price_my_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5.0dip"
        android:text="总价:"
        android:textSize="14sp"
        android:textColor="#ffff0033" />
     <TextView
        android:id="@+id/tv_price_total_shoppinglist_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="14sp"
        android:textColor="#ffff0033" />
    </LinearLayout>

<LinearLayout
    android:id="@+id/aaaaaaa"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:layout_margin="2dp"
    android:layout_weight="1"
    android:gravity="center_vertical"
    android:visibility="visible" >

    <TextView
        android:id="@+id/canguan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="所属餐馆:"
        android:textColor="#ff000000"
        android:textSize="14sp"
        android:visibility="gone" />

     <TextView
        android:id="@+id/tv_restaurant_my_shoppingcar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="14sp"
        android:textColor="#ff000000" 
        android:visibility="visible"/>
     </LinearLayout>
     <RelativeLayout
    android:id="@+id/layout_number_money_shoppinglist"
    android:layout_width="wrap_content"
    android:layout_height="30.0dip"
    android:visibility="visible" >

        <ImageView
            android:id="@+id/edit_product_num_descense_shoppinglist_jian"
            android:layout_width="30.0dip"
            android:layout_height="30.0dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@drawable/edit_product_num_des_selector" 
            android:focusable="false"
			android:focusableInTouchMode="false"
			android:clickable="false" />

        <TextView
            android:id="@+id/edit_product_show_shoppinglist_number"
            android:layout_width="50.0dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/edit_product_num_descense_shoppinglist_jian"
            android:gravity="center"
            android:inputType="number"
            android:width="60.0dip" />

        <ImageView
            android:id="@+id/edit_product_num_increse_shoppinglist_jia"
            android:layout_width="30.0dip"
            android:layout_height="30.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15.0dip"
            android:layout_toRightOf="@id/edit_product_show_shoppinglist_number"
            android:background="@drawable/edit_product_num_add_selector" 
            android:focusable="false"
			android:focusableInTouchMode="false"
			android:clickable="false" />
    </RelativeLayout>
</LinearLayout>


    <CheckBox 
        android:id="@+id/cb_goodsselect_shoppinglist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5.0dip"
        android:focusable="false"
		android:focusableInTouchMode="false"
		android:clickable="false"  />

</RelativeLayout>

