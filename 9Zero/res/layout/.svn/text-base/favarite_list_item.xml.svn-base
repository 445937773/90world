<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5.0dip"
    android:background="#eeeeee"
   >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="#ffffff" >

    <RelativeLayout
    android:id="@+id/ly_picture_my_favorite_i"
    android:layout_width="85.0dip"
    android:layout_height="85.0dip"
    android:layout_marginTop="5dp"
    android:paddingLeft="5.0dip" >

    <ImageView
        android:id="@+id/iv_picture_my_shoppingcar"
        android:layout_width="100.0dip"
        android:layout_height="100.0dip"
        android:layout_marginBottom="5dp"
        android:background="@drawable/background_corners"
        android:padding="5.0dip"
        android:scaleType="fitCenter" />

</RelativeLayout>
    
<LinearLayout
    android:id="@+id/layout_product_show_my_favorite"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/ly_picture_my_favorite_i"
    android:layout_alignTop="@+id/ly_picture_my_favorite_i"
    android:layout_toRightOf="@+id/ly_picture_my_favorite_i"
    android:orientation="vertical"
    android:weightSum="3" >

    <TextView
        android:id="@+id/cb_goodsselect_shoppinglist_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="5.0dip"
        android:layout_marginRight="15.0dip"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="商品名字"
        android:textColor="#ff000000"
        android:textSize="18sp"
         />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_weight="1"
    android:gravity="center_vertical" >

    <TextView
        android:id="@+id/tv_text_price_my_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5.0dip"
        android:text="售价:"
        android:textSize="14sp"
        android:textColor="#ffff0033" />

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="5dp"
         android:ellipsize="end"
         android:singleLine="true"
         android:text="¥"
         android:textColor="#000000"
         android:textSize="14sp" />

     <TextView
         android:id="@+id/tv_price_my_favorite"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="2dp"
         android:ellipsize="end"
         android:text="15.0"
         android:singleLine="true"
         android:textColor="#000000"
         android:textSize="14sp" />

    </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:layout_marginLeft="5dp"
    android:layout_weight="1"
    android:visibility="visible" >

         <TextView
             android:id="@+id/standard_restaurant_shoppingcar"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="所属餐馆："
             android:textColor="#ff000000"
             android:textSize="14sp" />

	     <TextView
	        android:id="@+id/canguan"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:ellipsize="end"
	        android:textSize="14sp"
	        android:textColor="#ff000000" 
	        android:visibility="visible"/>
	     
	     <TextView
	         android:id="@+id/iv_busy_shoppingcar_item"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_marginLeft="5dp"
	         android:background="@drawable/background_corners_for_busy"
	         android:ellipsize="end"
	         android:singleLine="true"
	         android:text="忙碌中"
	         android:textColor="#FFFFFF"
	         android:textSize="13sp"
	         android:typeface="serif"
	         android:visibility="gone" />
     
     </LinearLayout>

</LinearLayout>


    <CheckBox 
        android:id="@+id/ck_select_my_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5.0dip"
        android:focusable="false"
		android:focusableInTouchMode="false"
		android:clickable="false" 
		android:button="@drawable/shoppingcar_check" />
    
</RelativeLayout>

</RelativeLayout>

