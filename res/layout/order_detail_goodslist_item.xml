<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff" 
    android:paddingBottom="8.0dp">



    <ImageView
        android:id="@+id/iv_goodsimage_order_detail"
        android:layout_width="100.0dp"
        android:layout_height="100.0dp"
        android:layout_marginLeft="10.0dp"
        android:layout_marginRight="10.0dp"
        android:layout_marginTop="8.0dp"
         />

    <TextView
        android:id="@+id/tv_goodsname_order_detail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:layout_toRightOf="@+id/iv_goodsimage_order_detail"
        android:lines="2"
        android:textColor="#ff333333"
        android:textSize="18sp" 
        android:text="商品名"/>

    <TextView
        android:id="@+id/tv_text_goodsnumber_order_detail"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_goodsname_order_detail"
        android:layout_below="@+id/tv_goodsname_order_detail"
        android:layout_marginBottom="6.5dip"
        android:textColor="@android:color/darker_gray"
        android:textSize="16.0sp" 
        android:text="@string/goods_number"/>
    <TextView
        android:id="@+id/tv_goodsnumber_order_detail_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_text_goodsnumber_order_detail"
        android:layout_alignTop="@+id/tv_text_goodsnumber_order_detail"
        android:layout_marginBottom="6.5dip"
        android:textColor="@android:color/darker_gray"
        android:textSize="16.0sp" 
        />
    <TextView
        android:id="@+id/tv_price_order_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_goodsname_order_detail"
        android:layout_below="@+id/tv_text_goodsnumber_order_detail"
        android:layout_marginBottom="6.5dip"
        android:textColor="#ffcc0000"
        android:textSize="18.0sp" 
        android:text="价格："/>




</RelativeLayout>