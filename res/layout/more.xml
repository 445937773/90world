        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            >

            <RelativeLayout
                android:id="@+id/layout_userinfo_more"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="2.5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2.5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="2"
                android:background="@drawable/info_pressed"
                android:gravity="center" >

				<ImageView
				    android:id="@+id/image1"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_centerHorizontal="true"
				    android:src="@drawable/more_logo" />

				<TextView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_below="@+id/image1"
				    android:layout_centerHorizontal="true"
				    android:layout_marginTop="5dp"
				    android:text="个人信息"
				    android:textColor="#ffffff"
				    android:textSize="18sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_address_setting_more"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="2.5dp"
                android:layout_marginLeft="2.5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_green"
                android:gravity="center" >

				<ImageView
				    android:id="@+id/image2"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_centerHorizontal="true"
				    android:src="@drawable/youxiang" />

				<TextView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_below="@+id/image2"
				    android:layout_centerHorizontal="true"
				    android:layout_marginTop="5dp"
				    android:text="地址管理"
				    android:textColor="#ffffff"
				    android:textSize="18sp" />
            </RelativeLayout>
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2" >
            
            <RelativeLayout
                android:id="@+id/layout_my_order_more"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="2.5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2.5dp"
                android:layout_marginTop="2.5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_green"
                android:gravity="center" >

				<ImageView
				    android:id="@+id/image3"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_centerHorizontal="true"
				    android:src="@drawable/more_order" />

				<TextView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_below="@+id/image3"
				    android:layout_centerHorizontal="true"
				    android:layout_marginTop="5dp"
				    android:text="我的订单"
				    android:textColor="#ffffff"
				    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_my_favorite_more"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="2.5dp"
                android:layout_marginLeft="2.5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2.5dp"
                android:layout_weight="2"
                android:background="@drawable/setting_pressed"
                android:gravity="center" >

				<ImageView
				    android:id="@+id/image4"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_centerHorizontal="true"
				    android:src="@drawable/more_favrait" />

				<TextView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_below="@+id/image4"
				    android:layout_centerHorizontal="true"
				    android:layout_marginTop="5dp"
				    android:text="我的收藏"
				    android:textColor="#ffffff"
				    android:textSize="18sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2" >
            
            <RelativeLayout
                android:id="@+id/layout_setting_more"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2.5dp"
                android:layout_marginTop="2.5dp"
                android:layout_weight="1"
                android:background="@drawable/setting_pressed"
                android:gravity="center" >

				<ImageView
				    android:id="@+id/image5"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_centerHorizontal="true"
				    android:src="@drawable/more_settings" />

				<TextView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_below="@+id/image5"
				    android:layout_centerHorizontal="true"
				    android:layout_marginTop="5dp"
				    android:text="设置"
				    android:textColor="#ffffff"
				    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_help_more"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="2.5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2.5dp"
                android:layout_weight="1"
                android:background="@drawable/info_pressed"
                android:gravity="center" >

				<ImageView
				    android:id="@+id/image6"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_centerHorizontal="true"
				    android:src="@drawable/more_about" />

				<TextView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_below="@+id/image6"
				    android:layout_centerHorizontal="true"
				    android:layout_marginTop="5dp"
				    android:text="关于"
				    android:textColor="#ffffff"
				    android:textSize="18sp" />
            </RelativeLayout>
        </LinearLayout>
		
</LinearLayout>
